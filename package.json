{
  "name": "roku-visual",
  "version": "1.0.0",
  "description": "Generative visual art controlled by Roku remote via ECP API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "keywords": [
    "roku",
    "ecp",
    "generative-art",
    "visualization",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lnorton89/rokuvisual.git"
  },
  "bugs": {
    "url": "https://github.com/lnorton89/rokuvisual/issues"
  },
  "homepage": "https://github.com/lnorton89/rokuvisual#readme",
  "dependencies": {
    "express": "^5.2.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "nodemon": "^3.1.14",
    "prettier": "^3.8.1"
  }
}
